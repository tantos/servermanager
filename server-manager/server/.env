#--------------------------------------------------------------------
# Multi-Server Control Panel Environment Configuration
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = ''
app.forceGlobalSecureRequests = false
app.CSPEnabled = false
app.indexPage = 'index.php'
app.uriProtocol = 'REQUEST_URI'
app.appTimezone = 'UTC'
app.defaultLocale = 'en'
app.negotiateLocale = false
app.supportedLocales = ['en']
app.charset = 'UTF-8'
app.permittedURIChars = 'a-z 0-9~%.:_\-'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = servermanager
database.default.username = servermanager
database.default.password = b15m1l4h
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 33066
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

#--------------------------------------------------------------------
# RSA KEYS
#--------------------------------------------------------------------

# Control Panel RSA Keys
RSA_PRIVATE_KEY_PATH = keys/private_key.pem
RSA_PUBLIC_KEY_PATH = keys/public_key.pem

#--------------------------------------------------------------------
# SERVER AGENT
#--------------------------------------------------------------------

# Default agent settings
AGENT_DEFAULT_PORT = 6969
AGENT_TIMEOUT = 30
AGENT_MAX_RETRIES = 3

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Session configuration
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = null
session.expiration = 7200

# Encryption
encryption.key = 

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# UPLOAD
#--------------------------------------------------------------------

# File upload settings
upload.maxSize = 10485760
upload.allowedTypes = 'gif|jpg|jpeg|png|pdf|txt|zip|tar.gz'
upload.maxWidth = 0
upload.maxHeight = 0

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

cache.handler = 'CodeIgniter\Cache\Handlers\FileHandler'
cache.backup = 'CodeIgniter\Cache\Handlers\DummyHandler'

